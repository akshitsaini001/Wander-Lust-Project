<% layout("/layouts/boilerplate") %>
<body>
    <div class="row">
        <div class="col-8 offset-3">
            <h3><%=listing.title %></h3>

        </div>
    </div>
    
    
    <div class="card col-6 offset-3">
        <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="image">
        <div class="card-body">
            <p class="card-text"><b>Owned by - </b> <i><%=listing.owner.username %></i></p>
            <p class="card-text"><%=listing.description %></p>
            <p class="card-text"><b>&#8377 <%=listing.price.toLocaleString("en-IN") %> /night</b></p>
            <p class="card-text"><%=listing.location %></p>
            <p class="card-text"><%=listing.country %></p>
            
        </div>

        <br>

        <% if(currUser && currUser._id.equals(listing.owner._id)) { %>
    
        <div class="col-1 d-flex gap-3">
            <a href="/listings/<%= listing._id%>/edit" class="btn btn-dark btn-edit" style="width: 200px;">Edit</a>
        

        
            <form method="post" action="/listings/<%=listing._id %>?_method=DELETE">
                <button class="btn btn-dark btn-del" style="width: 200px;">Delete this Listing</button>
            </form>

        </div>
        <br><br>
        <% } %>
        <hr>

        <div>
            <h4>Reviews</h4>
            <% if(currUser) { %>
            <form method="post" action="/listings/<%=listing._id %>/reviews" novalidate class="needs-validation">
                <!-- <div class="mb-3 mt-2">
                    
                    <input type="range" min="1" max="5" name="review[rating]" id="rating" class="form-range">
                </div> -->
                <label for="rating" class="form-label">Rating</label>
                <div class="mb-3 mt-2">
                    <fieldset class="starability-slot">
                        <legend>First rating:</legend>
                        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                    </fieldset>
                </div>

                <div class="mb-3 mt-2">
                    <label for="comment" class="form-label">Comment</label>
                    <textarea name="review[comment]" rows="5" cols="4" id="comment" class="form-control" required></textarea>
                    <div class="invalid-feedback">
                        Please enter your review.
                    </div>
                </div>
                
                <button class="btn btn-dark btn-edit">ADD</button>
            </form>
            <% } %>
            <hr>
            <h4>All Reviews</h4>

            <ul>
                <% for (review of listing.reviews) { %>
                <div class="card card-2" style="width: 18rem;">
                    <div class="card-body review-card">
                        <div class="card-title"><b><u><%= review.author.username %></u></b></div>
                        <p class="starability-result" data-rating="<%= review.rating %>"> </p>
                        <div class="card-text"><%= review.comment %></div>
                        <form method="post" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                            <button class="btn btn-dark btn-del mt-4">Delete</button>
                        </form>
                    </div>
                    
                </div>
                <% } %> 
                <!-- <% for (review of listing.reviews) { %>
                    <li> <%= review.comment %>  ,  <b><%= review.rating %> Star</b></li>

                <% } %>     -->

            </ul>    
        </div>

    </div>

    
</body>
